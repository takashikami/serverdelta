<html><head><title>MULTI</title></head>
<body onLoad="document.form.cmd.focus()">
<a href="/multi">MULTI</a>
<form action="/" method="post" name="form">
  <input type="text" name="cmd" size="40">
  <input type="submit">
</form>

<div><%= now + " " + cmd %></div>
<% res.each do |re| %>
    <hr><%= re[:hostname] %><br>
    <pre><%= re[:dsp].join("\n") %></pre>
<% end %>
</body></html>
